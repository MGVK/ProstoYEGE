<?xml version="1.0" encoding="utf-8"?>
<FrameLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/notebook1_small_left">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/white_background">


        <LinearLayout
            android:id="@+id/main_exercises_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="32dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_background">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginStart="3dp"
                    android:background="@drawable/tasklist_title_bakground"/>

                <TextView
                    android:id="@+id/exerciselist_title"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginStart="25dp"
                    android:gravity="center"
                    android:text="@string/exercises_list_title"
                    android:textColor="#fffc02"
                    android:textSize="22sp"/>

            </FrameLayout>
            <ScrollView
                android:id="@+id/exerciselist_scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:id="@+id/exercise_frame_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/layout_exerciseslist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    </LinearLayout>
                </FrameLayout>

            </ScrollView>

        </LinearLayout>


    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <View
            android:layout_width="90dp"
            android:layout_height="38dp"
            android:layout_gravity="left"
            android:background="@drawable/btn_tasks_gradient"
            android:gravity="center|center_horizontal"
            android:text="@string/tasks"
            android:textColor="#FFF"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/btn_exercises"
            android:layout_width="90dp"
            android:layout_height="33dp"
            android:layout_gravity="left"
            android:gravity="center|center_horizontal"
            android:text="@string/tasks"
            android:textColor="#FFF"
            android:textSize="17sp"/>


        <TextView
            android:id="@+id/btn_videos"
            android:layout_width="90dp"
            android:layout_height="33dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="17dp"
            android:background="@drawable/btn_video_corners"
            android:gravity="center|center_horizontal"
            android:text="@string/videos"
            android:textColor="#FFF"
            android:textSize="17sp"/>
        <ImageButton
            android:id="@+id/btn_forward"
            android:layout_width="55dp"
            android:layout_height="33dp"
            android:layout_gravity="right"
            android:background="@drawable/right"/>

    </FrameLayout>


    <ImageView
        android:id="@+id/rings_ex"
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginBottom="45dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/rings_left"
        android:visibility="visible"/>


    <ImageButton
        android:id="@+id/btn_home"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="62.5dp"
        android:layout_marginLeft="28.5dp"
        android:background="@drawable/btn_home"/>

</FrameLayout>