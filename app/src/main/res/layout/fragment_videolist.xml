<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/notebook1_small_right">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="13dp"
        android:background="@drawable/white_background">

        <LinearLayout
            android:id="@+id/main_videolist_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="32dp">

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:layout_height="wrap_content"
                          android:background="@color/task_title">
                <TextView
                    android:id="@+id/videolist_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginBottom="3dp"
                    android:text="@string/video_list_title"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:textColor="@color/task_text"/>

                <TextView
                    android:id="@+id/videolist_title_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginBottom="3dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text="@string/video_list_title_2"
                    android:textColor="@color/task_text"/>


            </LinearLayout>

            <ScrollView
                android:id="@+id/video_scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/layout_videolist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>

            </ScrollView>
        </LinearLayout>

    </FrameLayout>

    <ImageView
        android:id="@+id/rings_video"
        android:visibility="visible"
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:background="@drawable/rings_right"
        android:layout_gravity="left"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="45dp"/>

    <FrameLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/btn_exercises"
            android:layout_width="90dp"
            android:layout_height="33dp"
            android:text="@string/tasks"
            android:gravity="center|center_horizontal"
            android:layout_gravity="right"
            android:textSize="17sp"
            android:textColor="#FFF"
            android:background="@drawable/btn_tasks"/>

        <View
            android:layout_width="90dp"
            android:layout_marginRight="17dp"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:textSize="17sp"
            android:background="@drawable/btn_video_gradient"
            />
        <TextView
            android:id="@+id/btn_videos"
            android:layout_width="90dp"
            android:layout_marginRight="17dp"
            android:layout_height="33dp"
            android:text="@string/videos"
            android:gravity="center|center_horizontal"
            android:layout_gravity="center_horizontal"
            android:textSize="17sp"
            android:textColor="#FFF"/>
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="55dp"
            android:layout_height="33dp"
            android:layout_gravity="left"
            android:background="@drawable/left"/>



    </FrameLayout>


</FrameLayout>