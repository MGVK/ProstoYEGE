<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/notebook1_small_left">


    <FrameLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="42dp"
        android:layout_marginTop="12dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">


        <ImageButton
            android:id="@+id/btn_menu"
            android:layout_width="70dp"
            android:layout_height="33dp"
            android:background="@drawable/menu"/>

        <TextView
            android:id="@+id/btn_coins"
            android:layout_width="70dp"
            android:layout_height="33dp"
            android:layout_marginLeft="7dp"
            android:background="@drawable/btn_video_corners"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="0"
            android:textColor="@color/coins"
            android:textSize="18dp"/>


        <ImageButton
            android:id="@+id/btn_forward_task"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@drawable/right"/>


    </FrameLayout>




    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="45dp"
        android:background="@drawable/white_background"
        android:layout_marginLeft="13dp"
        android:layout_marginBottom="13dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:id="@+id/main_tasklist_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginRight="32dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_background">

                <TextView
                    android:id="@+id/tasklist_title"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/tasklist_title_bakground"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginEnd="3dp"
                    android:text="@string/task_list_title"
                    android:textColor="#fffc02"
                    android:textSize="22sp"/>

            </LinearLayout>


            <ru.mgvk.prostoege.ui.VerticalScrollView
                android:id="@+id/task_scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/layout_tasklist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp">

                </LinearLayout>

            </ru.mgvk.prostoege.ui.VerticalScrollView>
        </LinearLayout>

    </FrameLayout>

    <ImageView
        android:id="@+id/rings"
        android:visibility="visible"
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:background="@drawable/rings_left"
        android:layout_gravity="right"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="45dp"
        />

</FrameLayout>