<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape>

            <gradient
                android:startColor="#fb3663"
                android:endColor="#ce113c"
                android:angle="-90"/>

            <corners
                android:radius="4dp"/>
            <stroke
                android:color="#5e091c"
                android:width="1dp"/>

        </shape>

    </item>

    <item android:state_pressed="true">
        <shape>

            <gradient
                android:startColor="#b2fb3663"
                android:endColor="#b2ce113c"
                android:angle="-90"/>

            <corners
                android:radius="4dp"/>
            <stroke
                android:color="#b25e091c"
                android:width="1dp"/>

        </shape>

    </item>


</selector>