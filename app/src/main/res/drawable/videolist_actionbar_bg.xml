<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:left="-100dp"
        android:top="-100dp">

        <rotate
            android:fromDegrees="1"
            android:pivotX="100%"
            android:pivotY="100%">

            <shape>

                <gradient
                    android:endColor="#ff676b"
                    android:startColor="#ffc001"
                    android:type="linear">
                </gradient>

            </shape>

        </rotate>

    </item>

</layer-list>